<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg" />

    <RelativeLayout
        android:id="@+id/ann_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ann_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/my_mes_notice" />

        <TextView
            android:id="@+id/ann_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ann_image"
            android:text="@string/announcement"
            android:textColor="#424251"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ann_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ann_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#B2B2B2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ann_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ann_title"
            android:layout_below="@id/ann_title"
            android:layout_marginTop="6dp"
            android:text="@string/notice_place_holder"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg" />


    <RelativeLayout
        android:id="@+id/msg_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/msg_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/my_mes_systemmes" />

        <TextView
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/msg_image"
            android:text="@string/sys_msg"
            android:textColor="#424251"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/msg_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#B2B2B2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/msg_title"
            android:layout_below="@id/msg_title"
            android:layout_marginTop="6dp"
            android:text="@string/sys_msg_place_holder"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/re_news_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:layout_width="21dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/common_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="22dp"
                android:text="@string/news_recommend"
                android:textColor="#909298"
                android:textSize="15sp" />

            <View
                android:layout_width="21dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/common_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/refresh_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:drawableLeft="@drawable/refresh_news"
            android:drawablePadding="3dp"
            android:paddingRight="7dp"
            android:text="@string/refresh_renews"
            android:textColor="#909298" />

    </FrameLayout>

</LinearLayout>